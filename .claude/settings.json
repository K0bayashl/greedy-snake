{
  "hooks": {
    "user-prompt-submit": {
      "command": "git status -sb 2>/dev/null || echo '不在 Git 仓库中'",
      "enabled": true
    },
    "edit-file": {
      "command": "echo '✅ 文件已修改: {{file_path}}'"
    ,
      "enabled": true
    }
  },
  "permissions": {
    "bash": {
      "allowedPrompts": [
        "查看文件",
        "运行测试",
        "构建项目"
      ]
    }
  }
}